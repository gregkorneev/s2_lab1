#include <iostream>
#include "Time.h"

int main() {
    // 1) 2-3 объекта разными конструкторами
    Time t1;                 // 00:00:00
    Time t2(12, 34, 56);     // с параметрами
    Time t3(t2);             // копирование

    std::cout << "Initial objects:\n";
    t1.print();
    t2.print();
    t3.print();

    // 2) Работа методов
    std::cout << "\nAdd seconds to t1:\n";
    t1.addSeconds(3661); // 01:01:01
    t1.print();

    std::cout << "\nGetters:\n";
    std::cout << "t1 hours=" << t1.getHours()
              << " minutes=" << t1.getMinutes()
              << " seconds=" << t1.getSeconds() << "\n";

    std::cout << "\nSetters (set t3 to 23:59:50):\n";
    t3.setHours(23);
    t3.setMinutes(59);
    t3.setSeconds(50);
    t3.print();

    std::cout << "\nDifference t2 and t3:\n";
    Time d = t2.difference(t3);
    d.print();

    std::cout << "\nSeconds from start of day:\n";
    std::cout << "t2 = " << t2.toSeconds() << " seconds\n";

    std::cout << "\nValidity check:\n";
    std::cout << "t2 is valid? " << (t2.isValid() ? "YES" : "NO") << "\n";

    // 3) Перегруженные операторы
    std::cout << "\nOperators:\n";
    std::cout << "t2 == t3 ? " << (t2 == t3 ? "YES" : "NO") << "\n";
    std::cout << "t2 - t1 = " << (t2 - t1) << "\n";

    // 4) Статический метод
    std::cout << "\nStatic method fromSeconds:\n";
    Time t4 = Time::fromSeconds(9 * 3600 + 10 * 60 + 11);
    std::cout << "t4 = " << t4 << "\n";

    // 5) Вывод информации (уже было через print и <<)
    std::cout << "\nFinal states:\n";
    t1.print();
    t2.print();
    t3.print();
    t4.print();

    return 0;
}
